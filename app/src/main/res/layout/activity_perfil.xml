<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edtNome"
        android:layout_alignStart="@+id/edtNome"
        android:layout_marginBottom="-39dp"
        android:text="Nome: "
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="39dp"
        android:ems="10"
        android:hint="Informe seu nome"
        android:inputType="text|textPersonName" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/edtNome"
        android:layout_marginTop="93dp"
        android:text="E-mail: "
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edtNome"
        android:layout_below="@+id/textView6"
        android:ems="10"
        android:hint="Informe seu e-mail"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/edtNome"
        android:layout_marginTop="171dp"
        android:text="Cidade: "
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtCidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edtNome"
        android:layout_below="@+id/textView7"
        android:ems="10"
        android:hint="Informe sua cidade"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edtNome"
        android:layout_centerVertical="true"
        android:text="UF: "
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtEstado"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edtNome"
        android:layout_below="@+id/textView8"
        android:ems="10"
        android:hint="UF"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/edtNome"
        android:layout_marginBottom="170dp"
        android:text="Idade: "
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtIdade"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edtNome"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="-170dp"
        android:ems="10"
        android:inputType="number" />

    <ImageButton
        android:id="@+id/btnSalvar"
        android:layout_width="87dp"
        android:layout_height="89dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/save" />
</RelativeLayout>
